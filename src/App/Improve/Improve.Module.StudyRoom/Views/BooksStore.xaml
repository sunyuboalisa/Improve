<UserControl x:Class="Improve.Module.StudyRoom.Views.BooksStore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <ItemsPanelTemplate x:Key="ListViewItemsPanel">
            <WrapPanel/>
        </ItemsPanelTemplate>
        <DataTemplate x:Key="ListViewItemTemplate">
            <StackPanel Orientation="Vertical">
                <Border Width="130" Height="210" BorderThickness="2" BorderBrush="#FF663F3F">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding Thumbnail}"/>
                    </Border.Background>
                </Border>
                <TextBlock HorizontalAlignment="Center" Text="{Binding Name}" 
                           Foreground="White" FontSize="15" Margin="0 5"
                           TextTrimming="WordEllipsis"/>
            </StackPanel>
        </DataTemplate>
        <Style x:Key="ListViewItemContainerStyle" TargetType="{x:Type ListViewItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border x:Name="bdContainer" BorderBrush="White" Margin="5" Padding="0 5 0 0"
                                FocusVisualStyle="{x:Null}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bdContainer" Property="Height" Value="250"/>
                                <Setter TargetName="bdContainer" Property="BorderThickness" Value="1"/>
                                <Setter TargetName="bdContainer" Property="Margin" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border>
            <ListView ItemContainerStyle="{DynamicResource ListViewItemContainerStyle}" ItemTemplate="{DynamicResource ListViewItemTemplate}" 
                      ItemsPanel="{DynamicResource ListViewItemsPanel}"
                      ItemsSource="{Binding Books}"
                      Background="Transparent"/>
        </Border>
    </Grid>
</UserControl>
