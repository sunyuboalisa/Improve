                    </Canvas>
                </Viewbox>
                <TextBlock Text="Login" FontSize="30" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Vertical" Width="300" Height="200" VerticalAlignment="Stretch" Margin="0,-39,0,0" >
                <StackPanel.Resources>
                    <Style BasedOn="{StaticResource MahApps.Styles.CheckBox}" TargetType="{x:Type CheckBox}">
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock Text="Remember"/>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>
                <TextBox x:Name="tbxUserName"
                         mah:TextBoxHelper.IsWaitingForData="True"
                         mah:TextBoxHelper.ClearTextButton="True"
                         mah:TextBoxHelper.Watermark="User name"
                         SpellCheck.IsEnabled="True" FontSize="18"
                         Text="{Binding UserName,Mode=OneWayToSource}"/>

                <PasswordBox Margin="0,25,0,0" x:Name="pwdBox"
                             mah:TextBoxHelper.IsWaitingForData="True"
                             mah:TextBoxHelper.ClearTextButton="True"
                             mah:TextBoxHelper.Watermark="Password"
                             Style="{StaticResource MahApps.Styles.PasswordBox.Win8}"
                             FontSize="18"
                             com:PasswordBoxHelper.Password="{Binding Password,Mode=OneWayToSource}">
                    <bv:Interaction.Behaviors>
                        <com:PasswordBoxBehavior/>
                    </bv:Interaction.Behaviors>
                </PasswordBox>
                <Grid Margin="0 15">
                    <CheckBox IsChecked="False" IsEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right">
                     <Hyperlink NavigateUri="">Forget the password</Hyperlink>
                    </TextBlock>
                </Grid>
                
                <Button x:Name="btnLogin" Style="{DynamicResource MahApps.Styles.Button.Circle}" Height="50" Width="50"
                        Content="Go" FontSize="20" Command="{Binding LoginCmd}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Grid.Row="2" FlowDirection="RightToLeft">
                <TextBlock VerticalAlignment="Center" Margin="10,0" FontSize="18">
                    <Hyperlink NavigateUri="">Register</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>

    </Grid>
</mah:MetroWindow>
